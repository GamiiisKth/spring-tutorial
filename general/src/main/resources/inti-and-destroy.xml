<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="person" class="se.joshua.general.Person" scope="singleton"
    init-method="onCreate" destroy-method="onDestroy">   <!--init method / destroy method-->

        <constructor-arg name="firstName" value="ali"/>
        <constructor-arg name="lastName" value="joshua"/>
        <property name="ssn" value="111" />

     </bean>

</beans>