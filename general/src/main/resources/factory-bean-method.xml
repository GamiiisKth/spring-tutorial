<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="person" class="se.joshua.general.factoryBeanAndMethod.Person" scope="singleton"
    factory-method="getInstance">
        <constructor-arg name="firstName" value="ali"/>
        <constructor-arg name="lastName" value="joshua"/>
        <property name="ssn" value="111"/>

     </bean>

    <bean id="person2" class="se.joshua.general.factoryBeanAndMethod.Person" scope="singleton"
    factory-bean="personFactory" factory-method="createPerson">


        <constructor-arg name="firstName" value="dennis"/>
        <constructor-arg name="lastName" value="joshua"/>
        <property name="ssn" value="222"/>



    </bean>
    <bean id="personFactory" class="se.joshua.general.factoryBeanAndMethod.PersonFactory"/>


</beans>