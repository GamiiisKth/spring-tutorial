<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean id="logger" class="se.joshua.spring.annotations.qualifier.LoggerQualifier"/>


    <!--we want to use qualifier to specifies which one we want to use  -->

    <bean id="consoleWriter" class="se.joshua.spring.annotations.ConsoleWriter">
        <qualifier value="toConsole"/>
    </bean>
    <bean id="consoleWriter2" class="se.joshua.spring.annotations.ConsoleWriter"/>

    <!---->



    <bean id="fileWriter" class="se.joshua.spring.annotations.FileWriter"/>


</beans>